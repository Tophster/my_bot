<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

   
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

     <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.14 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.089 0 0.103"/>
            <geometry>
                <box size="0.178 0.178 0.206"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <origin xyz="0.089 0 0.103"/>
            <geometry>
                <box size="0.178 0.178 0.206"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.8" x="0.178" y="0.178" z="0.206">
            <origin xyz="0.089 0 0.103" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.102 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.026"/>
            </geometry>
            <material name="black"/>
        </visual>    
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.026"/>
            </geometry>
        </collision>  
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

        <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.102 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.026"/>
            </geometry>
            <material name="black"/>
        </visual> 
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.026"/>
            </geometry>
        </collision> 
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>          
    </link>

    <!-- LEFT CASTER WHEEL LINK -->

    <joint name="left_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="left_caster_wheel"/>
        <origin xyz="0.04 0.065 0" rpy="${pi/2} 0 0"/>
    </joint>

    <link name="left_caster_wheel">
        <visual>
            <geometry> 
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry> 
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.034">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

        <!-- RIGHT CASTER WHEEL LINK -->

    <joint name="right_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="right_caster_wheel"/>
        <origin xyz="0.04 -0.065 0" rpy="${pi/2} 0 0"/>
    </joint>

    <link name="right_caster_wheel">
        <visual>
            <geometry> 
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry> 
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.034">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>    